<Window x:Class="wpfAplicacionesEscritorio.Modulo1.wpf3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfAplicacionesEscritorio.Modulo1"
        mc:Ignorable="d"
        Title="wpf3" Height="450" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="Brush1" Color="Blue"></SolidColorBrush>
    </Window.Resources>
    
    <StackPanel x:Name="stackPanel1" Orientation="Horizontal">
        <Rectangle Fill="{StaticResource Brush1}" Width="100" Height="100" Margin="5"></Rectangle>
        <Rectangle Fill="{DynamicResource Brush2}" Width="100" Height="100" Margin="5"></Rectangle>
        <Rectangle Fill="Green" Width="100" Height="100" Margin="10"></Rectangle>

        <Button Width="100" Height="100" Content="Change color" Click="Button_Click"></Button>
    </StackPanel>
</Window>
